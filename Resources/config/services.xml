<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="msi_menu.example.class">Msi\Bundle\MenuBundle\Example</parameter>
    </parameters>
    -->
    <services>
        <!-- Root Manager -->
        <service id="msi_menu.root_manager" class="Msi\Bundle\MenuBundle\Entity\MenuManager">
            <argument type="service" id="msi_admin.entity_manager" />
            <argument>Msi\Bundle\MenuBundle\Entity\Menu</argument>
            <argument type="service" id="session" />
        </service>
        <!-- Root Admin -->
        <service id="msi_menu_root_admin" parent="msi_admin.admin" class="Msi\Bundle\MenuBundle\Admin\RootAdmin">
            <argument />
            <argument>MsiMenuBundle</argument>
            <call method="setModelManager">
                <argument type="service" id="msi_menu.root_manager" />
            </call>
            <call method="setChild">
                <argument type="service" id="msi_menu_node_admin" />
            </call>
            <tag name="msi.admin"></tag>
        </service>

        <!-- Node Manager -->
        <service id="msi_menu.node_manager" class="Msi\Bundle\MenuBundle\Entity\MenuManager">
            <argument type="service" id="msi_admin.entity_manager" />
            <argument>Msi\Bundle\MenuBundle\Entity\Menu</argument>
            <argument type="service" id="session" />
        </service>
        <!-- Node Admin -->
        <service id="msi_menu_node_admin" parent="msi_admin.admin" class="Msi\Bundle\MenuBundle\Admin\NodeAdmin">
            <argument />
            <argument>MsiMenuBundle</argument>
            <call method="setModelManager">
                <argument type="service" id="msi_menu.node_manager" />
            </call>
            <call method="setParent">
                <argument type="service" id="msi_menu_root_admin" />
            </call>
            <tag name="msi.admin"></tag>
        </service>
    </services>
</container>
